generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  id            Int            @id @default(autoincrement())
  name          String
  email         String         @unique
  password      String
  dateOfBirth   DateTime
  phoneNumber   Int
  language      String
  work          String
  guestPassport GuestPassport?
  Booking       Booking[]
}

model GuestPassport {
  id                 Int      @id @default(autoincrement())
  passportNumber     Int
  passportIssueDate  DateTime
  passportExpiryDate DateTime
  dateOfBirth        DateTime
  placeOfBirth       String
  passportCountry    String
  holder             Guest    @relation(fields: [passportHolderId], references: [id])
  passportHolderId   Int      @unique
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
}

model Booking {
  id           Int       @id @default(autoincrement())
  date         DateTime
  checkoutDate DateTime
  type         GuestType
  status       Status?   @default(notVerifired)
  location     Locations
  bookedBy     Guest     @relation(fields: [guestId], references: [id])
  guestId      Int
}

enum GuestType {
  Individual
  Platinum
  LongTerm
  Vacation
}

enum Status {
  confirmed
  notVerifired
}

enum Locations {
  Kathmandu
  UnitedKingdom
  Melbourne
  Paris
  Kolkata
  Islamabad
  Moscow
  Bengaluru
  Sydney
  Delhi
}
